@page "/books"
 
@using CSP.Book;
@using CSP.Book.Samples;
@using System.Net.Http.Headers;
@using IdentityModel.Client;
@using Volo.Abp.Application.Dtos; 

@inject ISampleAppService bookService

<h1>Book example</h1>

<p>This component demonstrates fetching data from a book service (without HTTP call).</p>

@if (books == null)
{
	<p><em>Loading...</em></p>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th> 
			</tr>
		</thead>
		<tbody>
			@foreach (var book in books.Items)
			{
				<tr>
					<td>@book.Id</td>
					<td>@book.Title</td>
				</tr>
			}
		</tbody>
	</table>
}
 

@code {
	private ListResultDto<BookDto> books;

	private string ngrokUrl = "https://3ab9-165-225-194-91.eu.ngrok.io";

	private string author;

	protected override async Task OnInitializedAsync()
	{
		// this is local call to the service method 
		books = await bookService.GetAsync();
	}	 
}
